{
  "name": "LILYGO-ESP32S3-CC1101",
  "url": "https://github.com/Xinyuan-LilyGO",
  "vendor": "LILYGO",
  "frameworks": ["arduino"],
  "connectivity": ["wifi", "bluetooth"],
  "build": {
    "core": "esp32",
    "mcu": "esp32s3",
    "variant": "esp32s3",
    "f_cpu": "240000000L",
    "f_flash": "80000000L",
    "flash_mode": "qio",
    "partitions": "huge_app.csv",
    "extra_flags": [
      "-DLILYGO_CC1101",
      "-DUSER_SETUP_LOADED",
      "-DST7789_DRIVER=1",
      "-DTFT_WIDTH=170",
      "-DTFT_HEIGHT=320",
      "-DTFT_INVERSION_ON",
      "-DTFT_RGB_ORDER=1",
      "-DTFT_BL=21",
      "-DTFT_CS=41",
      "-DTFT_DC=16",
      "-DTFT_RST=40",
      "-DTFT_MOSI=9",
      "-DTFT_SCLK=11",
      "-DTFT_MISO=10",
      "-DSPI_FREQUENCY=40000000",
      "-DSPI_READ_FREQUENCY=20000000",
      "-DHAS_ENCODER",
      "-DENCODER_INA=4",
      "-DENCODER_INB=5",
      "-DENCODER_KEY=0",
      "-DBK_BTN=6",
      "-DBTN_ACT=0"
    ],
    "arduino": {}
  },
  "upload": {
    "maximum_size": 16777216,
    "maximum_ram_size": 327680,
    "speed": 921600,
    "flash_size": "16MB",
    "require_upload_port": true
  },
  "monitor": { "speed": 115200 }
}
