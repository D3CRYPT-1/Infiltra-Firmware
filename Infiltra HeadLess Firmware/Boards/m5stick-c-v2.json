{
  "build": {
    "core": "esp32",
    "mcu": "esp32",
    "variant": "m5stick-c",
    "partitions": "huge_app.csv",
    "filesystem": "spiffs",
    "f_flash": "40000000L"
  },
  "upload": {
    "maximum_size": 8388608,
    "flash_size": "8MB"
  },
  "frameworks": ["arduino"],
  "platform": "espressif32",
  "lib_deps": [
    "https://github.com/m5stack/M5StickCPlus2.git",
    "https://github.com/esphome/ESPAsyncWebServer.git",
    "bblanchon/ArduinoJson@^7.0.0"
  ],
  "build_flags": [
    "-DM5STICK_1",
    "-DM5STICK_1_2",
    "-DCORE_DEBUG_LEVEL=5"
  ]
}
